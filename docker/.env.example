# ==============================================
# Galaxy Holding - ERPNext + n8n + IA Stack
# Environment Variables Configuration
# ==============================================

# General Configuration
TIMEZONE=Europe/Madrid
SITE_NAME=galaxy.local
DOMAIN=galaxy.local

# ERPNext Database Configuration (MariaDB)
DB_ROOT_PASSWORD=Galaxy_Root_2025!
DB_NAME=galaxy_erpnext
DB_USER=galaxy_user
DB_PASSWORD=Galaxy_DB_2025!

# ERPNext Configuration
ADMIN_PASSWORD=Galaxy_Admin_2025!
ENCRYPTION_KEY=your-32-character-encryption-key-here
DEVELOPER_MODE=0

# n8n Database Configuration (PostgreSQL)
N8N_DB_NAME=n8n_galaxy
N8N_DB_USER=n8n_user
N8N_DB_PASSWORD=N8N_DB_2025!

# n8n Configuration
N8N_BASIC_AUTH_USER=galaxy_admin
N8N_BASIC_AUTH_PASSWORD=Galaxy_N8N_2025!
N8N_HOST=n8n.galaxy.local
N8N_PROTOCOL=http
WEBHOOK_URL=http://n8n.galaxy.local/
N8N_ENCRYPTION_KEY=your-32-character-n8n-encryption-key

# Microsoft 365 OAuth Configuration
# Get these from Azure App Registration
MICROSOFT_CLIENT_ID=your-azure-app-client-id
MICROSOFT_CLIENT_SECRET=your-azure-app-client-secret
MICROSOFT_TENANT_ID=your-azure-tenant-id

# OpenAI API Configuration
# Get this from OpenAI Platform
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Email Configuration
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=noreply@galaxyholding.com
SMTP_PASSWORD=your-email-password-here

# SSL Configuration
SSL_EMAIL=admin@galaxyholding.com
CERTBOT_EMAIL=admin@galaxyholding.com

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=galaxy-holding-backups

# Monitoring Configuration
MONITORING_EMAIL=admin@galaxyholding.com
ALERT_WEBHOOK=https://hooks.slack.com/your-webhook-here